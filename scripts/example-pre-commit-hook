#!/bin/bash
# Example pre-commit hook for Git
# Copy this file to .git/hooks/pre-commit and make it executable

# Exit on any error
set -e

echo "ğŸ” Running pre-commit validation..."

# Change to repository root
cd "$(git rev-parse --show-toplevel)"

# Run validation script in fast mode for pre-commit speed
if ./scripts/pre_commit_validation.sh --fast --quiet; then
    echo "âœ… Pre-commit validation passed"
    exit 0
else
    echo "âŒ Pre-commit validation failed"
    echo ""
    echo "ğŸ’¡ Tip: Run './scripts/pre_commit_validation.sh --fix' to auto-fix issues"
    echo "ğŸ’¡ Tip: Run './scripts/pre_commit_validation.sh --verbose' for detailed output"
    exit 1
fi